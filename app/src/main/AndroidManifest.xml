<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.android.agendanfc" >

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgendaNFC" >
        <activity
            android:name=".GrabaWhattsapActivity"
            android:exported="false" />
        <activity
            android:name=".GrabarLlamadaActivity"
            android:exported="false" />
        <activity
            android:name=".ContactosActivity"
            android:exported="false" />
        <activity
            android:name=".FormularioActivity"
            android:exported="false" />
        <activity
            android:name=".AniadirContActivity"
            android:exported="false" />
        <activity
            android:name=".WhatsappActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="api.whatsapp.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GrabarNFCActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERES" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuPrincipalActivity"
            android:exported="false" />
        <activity
            android:name=".RegistrarseActivity"
            android:exported="false" />
        <activity
            android:name=".IniciarSesionActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="patata.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
    </application>

</manifest>