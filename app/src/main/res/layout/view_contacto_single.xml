<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#6CBFB7"
    android:backgroundTint="#C9E3E0"
    android:backgroundTintMode="add"
    android:hapticFeedbackEnabled="false"
    android:padding="10dp"
    app:cardBackgroundColor="@color/teal_200"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#73ECE0"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layUno"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Número de Teléfono:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:padding="10dp"
                android:text="Telefono"
                android:textSize="24sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_separacion"
            android:textColor="@color/teal_700"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/layDos"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" Número de AppMensajería:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aplicacionM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:padding="10dp"
                android:text="AppMensajeria"
                android:textSize="24sp" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>